@page
@model FrontEnd.Pages.SaleRepresentative.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Sale Representative's List</h2>

<p>
    <a asp-page="Create" class="btn-light">Create New</a>
</p>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-default" asp-page="Create"/>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesRepresentatives[0].JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesRepresentatives[0].PromotionAgency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesRepresentatives[0].RetailStore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesRepresentatives[0].Person)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SalesRepresentatives) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PromotionAgency.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailStore.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
