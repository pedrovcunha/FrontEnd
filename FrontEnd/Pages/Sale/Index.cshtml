@page
@model FrontEnd.Pages.Sale.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Sale's Report List</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table table-responsive{-sm|-md|-lg|-xl}">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Comission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].RetailStore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].SalesRepresentative)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sales) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailStore.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesRepresentative.Person.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
